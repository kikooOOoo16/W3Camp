<% include ./partials/header %>

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <legend class="log-reg-intro">Register</legend>    
    </div>
    <div class="form new_edit_cmp_forms">
        <div class="row">
            <form class="log-reg-form" action="/register" method="POST">
                <div class="row">
                    <div class="col-md-4 col-md-offset-2 col-xs-8 col-xs-offset-2">
                        <div class="form-group">
                            <label for="firstName">First Name</label>
                            <input class="form-control" pattern=".{3,15}" id="firstName" required title="Must be between 3 and 15 Characters" type="text" name="user[firstName]" placeholder="first name*">
                        </div>    
                    </div>
                    <div class="col-md-4 col-md-offset-0 col-xs-8 col-xs-offset-2">
                        <div class="form-group">
                            <label for="lastName">Last Name</label>
                            <input class="form-control" pattern=".{3,15}" id="lastName" required title="Must be between 3 and 15 Characters" type="text" name="user[lastName]" placeholder="last name*">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 col-md-offset-2 col-xs-8 col-xs-offset-2">
                        <div class="form-group">
                            <label for="email">E-mail</label>
                            <input class="form-control" type="email" id="email" name="user[email]" placeholder="example@mail.com*">
                        </div>
                    </div>
                    <div class="col-md-4 col-md-offset-0 col-xs-8 col-xs-offset-2">
                        <div class="form-group">
                            <label for="adminPass">Admin Password</label>
                            <input class="form-control" type="password" id="adminPass" name="adminPass" placeholder="admin password">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 col-md-offset-2 col-xs-8 col-xs-offset-2">
                        <div class="form-group">
                            <label for="username">Username</label>
                            <input class="form-control" pattern=".{3,15}" id="username" required title="Must be between 3 and 15 Characters" type="text" name="user[username]" placeholder="username*">
                        </div>
                    </div>
                    <div class="col-md-4 col-md-offset-0 col-xs-8 col-xs-offset-2">
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input class="form-control" pattern=".{3,20}" id="password" required title="Password must be between 3 and 15 Characters" type="password" name="password" placeholder="password*">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-8 col-md-offset-2 col-xs-8 col-xs-offset-2">
                        <div class="form-group">
                            <label for="bio">Bio</label>
                            <textarea id="bio" class="form-control" type="bio" name="user[bio]" rows="4" placeholder="Write a short description of yourself and what you enjoy about camping."></textarea>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-4 col-xs-offset-2 col-md-4 col-md-offset-4">
                        <div class="g-recaptcha" data-sitekey=<%= siteKey %>></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-8 col-md-offset-4 col-xs-8 col-xs-offset-2">
                        <button class="btn btn-lg btn-primary btn-block">Sign up</button>
                        <p class="message">Already registered? <a href="/login">Login</a></p>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<% include ./partials/footer %>