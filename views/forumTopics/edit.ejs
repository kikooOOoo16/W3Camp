<% include ../partials/header %>

<div class="row d-flex justify-content-center frosted-glass2 col-10 col-md-6 col-lg-5 mb-3 mt-4 pt-3 pb-3">
    <div class="form general-style-form col-lg-12">
        <form action="/forumTopics/<%= forumTopic._id %>?_method=PUT" method="POST">
            <div class="col mt-3">
                <div class="form-group">
                    <select class="custom-select" name="forumTopic[topic]" required>
                        <option selected><%= forumTopic.topic %></option>
                        <% if (currentUser.isAdmin) { %>
                            <% if (forumTopic.topic !== "Site information") { %>
                        <option value="Site information">Site information</option>
                            <% } %>
                        <% } %>
                            <% if (forumTopic.topic !== "Campground discussions") { %>
                        <option value="Campground discussions">Campground discussions</option>
                            <% } %>
                            <% if (forumTopic.topic !== "General") { %>
                        <option value="General">General</option>
                            <% } %>
                    </select>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label for="name">Topic Name</label>
                    <input class="form-control" type="text" name="forumTopic[name]" value="<%= forumTopic.name %>" placeholder="name*" required>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea id="description" class="form-control" type="text" name="forumTopic[description]" rows="4" placeholder="Write what you want to be discussed...*" required><%= forumTopic.description %></textarea>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block mx-auto hvr-grow">Update!</button>
                </div>
                <div class="col text-center col-12">
                    <a class="w-100" href="/forumTopics/<%= forumTopic._id %>">Go Back</a>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="invisible">
    sds
</div>

<% include ../partials/footer %>