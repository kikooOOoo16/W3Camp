<body>

<div class="container">
    <% if(error && error.length > 0) { %>
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
    <% } %>
    <% if (success && success.length > 0) { %>
        <div class="alert alert-success" role="alert">
            <%= success %>
        </div>
    <% } %>
</div>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="content">
                <div id="landing-header">
                    <h1>Welcome to W3Camp</h1>
                    <h3>Start planning your next camping trip today!</h3>
                    <hr>
                    <a href="/campgrounds" class="btn btn-lg btn-change mt-4">Lets Get Started</a>
                </div>
            </div>
        </div>
    </div>
</div>

