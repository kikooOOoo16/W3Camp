<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
            <!-- Google Maps Map -->
            <div id="map"></div> 
        </div>
        <div class="col-md-9">
            <!-- Campground show info and edit/delete functionality -->
            <div class="thumbnail">
                <img class="image-responsive" src="<%= campground.image.url %>" >
                <div class="caption-full">
                    <h4 class="pull-right"><%= campground.price %>$/night</h4>
                    <h4><a><%=campground.name%></a></h4>
                    <p><%=campground.description%></p>
                    <p>
                        <em>Submitted By <a href="/users/<%= campground.author.id %>"><%= campground.author.username %></a>, <%= moment(campground.createdAt).fromNow() %></em>
                    </p>
                    <% if (currentUser && campground.author.id.equals(currentUser._id) || currentUser && currentUser.isAdmin) {%>
                        <a class="btn btn-xs btn-warning user-func-buttons" href="/campgrounds/<%= campground._id%>/edit">Edit</a>
                        <form class="delete-form user-func-buttons" action="/campgrounds/<%= campground._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-xs btn-danger">Delete</button>        
                        </form>
                    <% } %>
                </div>
            </div>
            <div class="well">
                <!-- Add new comment collapsible button and form -->
                <div class="text-right">
                    <a class="btn btn-success pull-right" role="button" data-toggle="collapse" href="#collapseComment" aria-expended="false" aria-controls="collapseComment">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>Add New Comment</a>
                </div>

                <h4><strong>Comments <span class="glyphicon glyphicon-comment" aria-hidden="true"></span></strong></h4>
                <div class="collapse" id="collapseComment">
                    <div class="well comment-new-form">
                        <% if (!currentUser) { %>
                        <h5>You need to be logged in before you can comment. <a href="/login">CLick here </a>to go to the login page.</h5>
                        <% } %>
                        
                        <% if (currentUser) { %>
                        <h4>Write your comment <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></h4>
                        <form id="add-comment-form" action="/campgrounds/<%= campground._id %>/comments" method="POST">
                            <div class="form-group">
                                <input class="form-control" type="text" disabled value="<%= currentUser.username %>">
                            </div>
                            <div class="from-group">
                                <textarea class="form-control" name="comment[text]" placeholder="write your comment..." form="add-comment-form" rows="5" cols="70"></textarea>
                            </div>
                            <div class="button-form-spacing form-group">
                                <button class="btn btn-success btn-sm">Comment <span class="glyphicon glyphicon-comment" aria-hidden="true"></span></button>
                            </div>
                        </form>
                        <% } %>
                    </div>
                </div>
                <hr>
                <!-- Show comments section -->
                <% if (campground.comments.length === 0) { %>
                <em class="no-comments-text">No comments yet.</em>
                <% } %>
                <% campground.comments.forEach(function(comment) { %>
                    <div class="row">
                        <div class="col col-md-12">
                            <strong>
                                <% if(currentUser && currentUser._id.equals(comment.author.id)) { %>
                                    <span class="glyphicon glyphicon-user comment-isCurrentUserGlyph" aria-hidden="true"></span>
                                <% } else { %>
                                    <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                                <% } %>
                                <%= comment.author.username %>
                            </strong>
                            <span class="pull-right"> <%= moment(comment.createdAt).fromNow() %></span>
                            <p><%= comment.text %></p>
                            <% if (currentUser && currentUser._id.equals(comment.author.id)) { %>
                                <!-- Collapsible Edit button -->
                                <a class="btn btn-xs btn-warning" role="button" data-toggle="collapse" href="#collapseEdit<%= comment._id %>" aria-expended="false" aria-controls="collapse<%= comment._id %>">Edit</a>
                                <!-- Delete comment button-->
                                <form id="delete-form" class="delete-comment-form" action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
                                    <button class="btn btn-xs btn-danger">Delete</button>
                                </form>
                                <!-- Edit comment form -->
                                <div class="collapse" id="collapseEdit<%= comment._id %>"> 
                                    <div class="well edit-comment-form">
                                        <h4>Edit your comment <span class="glyphicon glyphicon-edit" aria-hidden="true"></span></h4>
                                        <form id="edit-comment-form<%= comment._id %>" action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                                            <div class="form-group">
                                                <input class="form-control" type="text" disabled value="<%= currentUser.username %>">
                                            </div>
                                            <div class="form-group">
                                                <textarea class="form-control" name="comment[text]" form="edit-comment-form<%= comment._id %>" rows="5" cols="70"><%= comment.text %></textarea>
                                            </div>
                                            <div class="button-form-spacing form-group">
                                                <button class="btn btn-warning btn-sm">Edit comment <span class="glyphicon glyphicon-comment" aria-hiden="true"></span></button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            <% } %>
                            <hr>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>
 
 <!--Google Maps API script-->
 
<script>
  function initMap() {
    var lat = <%= campground.lat %>;
    var lng = <%= campground.lng %>;
    var center = {lat: lat, lng: lng };
    var map = new google.maps.Map(document.getElementById('map'), {
        zoom: 8,
        center: center,
        scrollwheel: false
    });
    var contentString = `
      <strong><%= campground.name %><br />
      <%= campground.location %></strong>
      <p><%= campground.description %></p>
    `
    var infowindow = new google.maps.InfoWindow({
      content: contentString
    });
    var marker = new google.maps.Marker({
        position: center,
        map: map
    });
    marker.addListener('click', function() {
      infowindow.open(map, marker);
    });
  }
</script>

<script async defer src=<%= googleMapsApi %>></script>
 
<% include ../partials/footer %>