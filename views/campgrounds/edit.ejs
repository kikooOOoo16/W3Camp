<% include ../partials/header %>

<div class="row d-flex justify-content-center frosted-glass2 col-10 col-md-6 col-lg-5 mb-3 mt-4 pt-3 pb-3">
    <div class="general-style-form form col-lg-12">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="col">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>">
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" id="image" name="image" accept="image/*" >
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea id="description" class="form-control" type="text" name="campground[description]" rows="4"><%= campground.description %></textarea>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <a class="btn btn-sm mb-2 btn-secondary" role="button" data-toggle="collapse" href="#collapseContactInfo" aria-expended="false" aria-controls="collapseContactInfo">
                        <i class="fas fa-plus aria-hidden=true mr-2"></i>Add Campground Contact Info
                    </a>
                    <div class="collapse pl-4 pr-4 pt-2 pb-2" id="collapseContactInfo">
                        <label for="phone">Phone</label>
                        <input class="mb-1 form-control" type="text" name="campground[contact][phone]" id="phone" placeholder="(555)555-5555" value="<%= campground.contact.phone %>">
                        <label for="email">E-mail</label>
                        <input class="mb-1 form-control" type="email" name="campground[contact][email]" id="email" placeholder="nationalPark@mail.com" value="<%= campground.contact.email %>">
                        <label for="website">Website</label>
                        <input class="form-control" type="text" name="campground[contact][website]" id="website" placeholder="www.campingGround.com" value="<%= campground.contact.website %>">
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label for="price">Price/Night</label>
                    <input class="form-control" type="number" name="campground[price]" value="<%= campground.price %>" min="0.01" step="0.01">
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
                </div>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block mx-auto hvr-grow">Update!</button>
            </div>
            <div class="col-12 text-center">
                <a href="/campgrounds/<%= campground._id %>">Go Back</a>
            </div>
            <input style="position: absolute; display: none; " name="oldImagePublicId" value="<%= campground.image.publicId %>">
        </form>
    </div>
</div>
<div class="invisible">
    sds
</div>

<% include ../partials/footer %>