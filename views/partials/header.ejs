<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>W3Camp</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link rel="stylesheet" href="/stylesheets/main.css">
            <link href="https://fonts.googleapis.com/css?family=Nunito|Noto+Sans|Roboto" rel="stylesheet"> 
        <script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js" type="text/javascript" async></script>
    </head>
    <body>
        
        <nav class="navbar navbar-default">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/">W3Camp</a>
                </div>
                <div id="navbar" class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li class="nav-btn <%= typeof page !== 'undefined' && page === 'campgrounds' ? 'active' : '' %>"><a href="/campgrounds"><span class="glyphicon glyphicon-home"></span> Home</a><div class="div-bottom-border"></div></li>  
                        <li class="nav-btn <%= typeof page !== 'undefined' && page === 'contact' ? 'active' : '' %>"><a href="/contact">Contact Us</a><div class="div-bottom-border"></div></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <% if(!currentUser){ %>
                            <li id="nav-login" class="nav-btn <%= typeof page !== 'undefined' && page === 'login' ? 'active' : '' %>"><a href="/login">Login</a><div class="div-bottom-border"></div></li>
                            <li class="nav-btn <%= typeof page !== 'undefined' && page === 'register' ? 'active' : '' %>"><a href="/register">Sign Up</a><div class="div-bottom-border"></div></li>
                        <% } else if (currentUser.isAdmin){ %>
                            <li class="nav-btn <%= typeof page !== 'undefined' && page === 'userPage' ? 'active' : '' %>"><a href="/users/<%= currentUser._id %>"><div class="inset"><img src="<%= currentUser.avatarImg.url %>" class="img-circle"></div>Admin: <%= currentUser.username %></a><div class="div-bottom-border"></div></li>
                            <li class="nav-btn"><a href="/logout">Logout</a><div class="div-bottom-border"></div></li>
                        <% } else {%>
                            <li class="nav-btn <%= typeof page !== 'undefined' && page === 'userPage' ? 'active' : '' %>"><a href="/users/<%= currentUser._id %>"><div class="inset"><img src="<%= currentUser.avatarImg.url %>" class="img-circle"></div><%= currentUser.username %></a><div class="div-bottom-border"></div></li>
                            <li class="nav-btn"><a href="/logout">Logout</a><div class="div-bottom-border"></div></li>
                        <% } %>
                    </ul>
                </div>
            </div>
        </nav>
        
        <div class="container">
            <% if (error && error.length > 0) {%> 
            <div class="alert alert-danger" role="alert">
                <%= error %>    
            </div>
            <% } %>
            <% if (success && success.length > 0) {%> 
            <div class="alert alert-success" role="alert">
                <%= success %>  
            </div>
            <% } %>
        </div>