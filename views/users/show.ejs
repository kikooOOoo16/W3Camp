<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h1><%= user.firstName + " " + user.lastName %></h1>
            <div class="thumbnail">
                <img src="<%= user.avatarImg.url %>" alt="/images/defaultAvatar.png">
                <div class="caption"><a href="mailto:<%= user.email %>"><%= user.email %></a></div>
            </div>
            <p>
                <%= user.bio %>
            </p>
            <% if (currentUser && user.id === currentUser.id) { %>
                <a href="<%= user.id %>/edit" id="editProfileBtn"class="btn btn-primary btn-lg btn-block">Edit Profile</a>
            <% } %>
        </div>
        <div class="col-md-8">
            <% if(campgrounds.length > 0) { %>
                <% if (currentUser && user.id === currentUser.id) { %>
                    <h3>View your submitted campgrounds: </h3>        
                <% } else { %>
                    <h3><%= user.username %>'s submitted campgrounds: </h3>
                <% } %>
                <ul class="list-group">
                    <% campgrounds.forEach(function(campground) { %>
                        <li class="list-group-item user-camps-list"><a href="/campgrounds/<%= campground.id %>"><%= campground.name %></a></li>
                    <% }); %>
                </ul>
            <% } else { %>
                <% if (currentUser && user.id === currentUser.id) { %>
                    <h3>You haven't submitted any campgrounds... :( </h3>        
                <% } else { %>
                    <h3><%= user.username %> hasn't submitted any campgrounds :( </h3>
                <% } %>
            <% } %>
        </div>
    </div>
</div>

<% include ../partials/footer %>