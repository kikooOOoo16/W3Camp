<% include ../partials/header %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <legend class="form-header">Reset Password</legend>
        </div>
        <div class="form input-form col-7 col-md-4 col-lg-3">
            <form action="/reset/<%= token %>" method="POST">
                <div class="form-group">
                    <label for="password">New Password</label>
                    <input type="password" name="password" value="" placeholder="New password" autofocus="autofocus" class="form-control"/>
                </div>
                <div class="form-group">
                    <label for="confirm">New Password</label>
                    <input type="password" name="confirm" value="" placeholder="Confirm password" autofocus="autofocus" class="form-control"/>
                </div>
                <div class="form-group">
                    <input type="submit" value="Update Password" class="btn btn-primary btn-lg btn-block">
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>